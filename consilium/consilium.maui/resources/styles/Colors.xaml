    <Color x:Key="Dark-Dark">#242424</Color>
    <Color x:Key="Dark-Back">#1E1E1E</Color>
    <Color x:Key="Dark-Med">#54695D</Color>
    <Color x:Key="Dark-Green">#2E4237</Color>
    <Color x:Key="Mid-Green">#719984</Color>
    <Color x:Key="Light-Med">#E3D6BF</Color>
    <Color x:Key="Light-Back">#F4EEE6</Color>
    <Color x:Key="Light-Light">#FAF7F2</Color>
    <Color x:Key="Dark-Red">#7a2b35</Color>
    <Color x:Key="Gray750">#2e2e2e</Color>

    <Color x:Key="Primary">#395948</Color>
    <Color x:Key="PrimaryDark">#648c77</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#FAF7F2</Color>
    <Color x:Key="SecondaryDarkText">#FAF7F2</Color>
    <Color x:Key="Tertiary">#54695D</Color>


    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->
