<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Consilium.Maui"
             xmlns:converters="clr-namespace:Consilium.Maui.Converters"
             x:Class="Consilium.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <x:String x:Key="TrashIcon">&#xf1f8;</x:String>
            <x:String x:Key="PlusIcon">&#x2b;</x:String>
            <x:String x:Key="CheckIcon">&#xf00c;</x:String>
            <x:String x:Key="XIcon">&#xf00d;</x:String>
            <x:String x:Key="CaretDownIcon">&#xf0d7;</x:String>
            <x:String x:Key="CaretUpIcon">&#xf0d8;</x:String>
            <x:String x:Key="CaretRightIcon">&#xf0da;</x:String>
            <x:String x:Key="RefreshArrowsIcon">&#xf021;</x:String>
            <x:String x:Key="UpArrowIcon">&#xf062;</x:String>
            <x:String x:Key="LeftArrowIcon">&#xf060;</x:String>
            <x:String x:Key="InfoIcon">&#xf05a;</x:String>

            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:SeeMoreSeeLessConverter x:Key="SeeMoreSeeLessConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
